parser: babel-eslint
extends:
  - airbnb-base
plugins:
  - import
env:
  browser: true
  node: true
rules:
  arrow-body-style: off
  camelcase: off
  func-names: off
  global-require: off
  import/no-extraneous-dependencies: off
  max-len: [error, 120]
  newline-per-chained-call: off
  no-alert: off
  no-console: off
  no-param-reassign: off
  no-shadow: off
  no-underscore-dangle: off
  sort-imports: error
settings:
  import/resolver:
    webpack:
      config: 'webpack.config.babel.js'
